<?xml version="1.0" encoding="UTF-8"?>

 <configuration>
	<appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="[%-5level] %d{dd/MMM HH:mm:ss} %l --> %msg%n" />
		</Console>
		<File name="File" fileName="target/surefire-reports/logs.txt">
			<PatternLayout pattern="[%-5level] %d{dd-MMM HH:mm:ss} %c{5} %F Line %L >>> %msg%n" />
		</File>
	</appenders>
	<loggers>
		<root level="trace">
            <appender-ref ref="Console" />
            <!-- <appender-ref ref="File" /> -->
		</root>
	</loggers>
	
	
	
</configuration>
